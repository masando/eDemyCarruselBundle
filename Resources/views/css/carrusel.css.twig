}

@media screen and (min-width:551px) {
    #edemy_carruselbundle_carrusel_imagenes > div {
        position: relative;
        min-width: 300px;
    }

    #edemy_carruselbundle_carrusel_imagenes img {
        position: absolute;
        top: 0px;
        right: 0px;
    }
}

